<script type="text/javascript" charset="utf-8">
  jQuery(document).ready(function(){
    // binds form submission and fields to the validation engine
    jQuery("#new_user").validationEngine();
  });

</script>

			<div class="grid_3"><p></p></div>
            <div class="grid_6">
                <div class="module">
                     <h2><span>登录</span></h2>
                        
                     <div class="module-body">
                        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name),
                        	:html => {:class => "login"}
                        ) do |f| %>
                            <p>
                                <label for="user_email">电子邮件</label>
                                <%= f.email_field :email , :class => "input-medium validate[required,maxSize[50],custom[email]]" %>
                            </p>
                            <p>
                                <label for="user_password">密码</label>
                                <%= f.password_field :password, :class => "input-medium password validate[required,minSize[6],maxSize[30]]" %>
                            </p>
                            <p>
                                <span><%= f.check_box :remember_me,:style => "float:left;vertical-align: middle;margin-right: 6px;" %> <label>记住密码</label></span>
                                
                            </p>
                            <fieldset>
                                <input class="submit-green" type="submit" value="登录" /> 
                                <input class="submit-gray" type="submit" value="取消" />
                            </fieldset>
                            <p>
                            	<%= render "devise/shared/links" %>
                            </p>
                        <% end %>
                        
                     </div> <!-- End .module-body -->
                </div> <!-- End .module -->
                <div style="clear:both;"></div>
            </div> <!-- End .grid_6 -->
            <div class="grid_3"><p></p></div>
            <div style="clear:both;"></div>
