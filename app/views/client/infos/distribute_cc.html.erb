<h1>分配cc</h1>

        <!-- Initiate tablesorter script -->
        <script type="text/javascript">
            $(document).ready(function() { 
                $("#myTable") 
                .tablesorter({
                    // zebra coloring
                    widgets: ['zebra'],
                    // pass the headers argument and assing a object 
                    headers: { 
                        // assign the sixth column (we start counting zero) 
                        6: { 
                            // disable it by setting the property sorter to false 
                            sorter: false 
                        } 
                    }
                });
            //.tablesorterPager({container: $("#pager")}); 
        }); 
        </script>

            <div class="grid_12">                
                <!-- Example table -->
                <div class="module">
                  <h2><span>分配CC</span></h2>
                    
                    <div class="module-table-body">
                        <table id="myTable" class="tablesorter">
                          <thead>
                                <tr>
                                    <th style="width:20%"></th>
                                    <th style="width:40%">姓名</th>
                                    <th style="width:20%">邮箱</th>
                                    <th style="width:20%"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <%= form_tag(save_distribute_client_infos_path, :method => :post) do %>
                                <% @ccs.each do |user| %>
                                <tr>
                                    <td class="align-center"><input type="radio" value="<%= user.id%>" name="cc_id"/></td>
                                    <td><a href=""><%= user.username %></a></td>
                                    <td><%= user.email %></td>
                                     <td><%=  submit_tag("确定")%></td>
                                </tr> 
                                <%= hidden_field_tag "info_id", "#{@info.id}"%>
                                <% end %> 
                                <% end %>                     
                            </tbody>
                        </table>
                        
                        <div style="clear: both"></div>
                     </div> <!-- End .module-table-body -->
                </div> <!-- End .module -->
                
                <div style="clear: both"></div>

                <div class="apple_pagination">
                    <%=h will_paginate @ccs, :previous_label => '上一页',  :next_label => '下一页'%>
                </div>
                
                

                
            </div> <!-- End .grid_12 -->
            <div style="clear: both"></div>
