                    <tr>
                        <th style="width:10%">ID</th>
                        <th style="width:10%">客户名称</th>
                        <th style="width:10%">添加人</th>
                        <th style="width:30%">内容</th>
                        <th style="width:15%">创建日期</th>
                        <th style="width:15%">最后更新</th>
                        <th style="width:10%">操作</th>
                    </tr>
                </thead>
                <tbody>
                    <% @info_notes.each do |info_note| %>
                    <tr>
