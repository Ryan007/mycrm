<div class="grid_12">
    <div class="bottom-spacing">
        <a href="<%= client_info_sessions_path %>" class="button">
          <span>返回</span>
        </a>
    </div>
</div>
<div class="grid_5">

    <div class="module">
         <h2><span>会话</span></h2>

         <div class="module-body">
            <p>
				<div>会话类型:<%= @session.session_type.name %></div>
			</p>
			<p>
				<div>添加人:<%= @session.user.username %></div>
			</p>

			<p>
				<div>客户姓名:<%= link_to @session.info.name, client_info_path(@session.info) %></div>
			</p>

			<p>
				<div>会话时间:<%= @session.session_time %></div>
			</p>

         </div> <!-- End .module-body -->
    </div> <!-- End .module -->
    <div style="clear:both;"></div>
</div> <!-- End .grid_6 -->
<div style="clear:both;"></div>